<div id="card">
  <img id="profile-img" src="" alt="Profile Picture" />
  <div id="info">
    <h2 id="profile-name"></h2>
    <a id="link" href="#" target="_blank" rel="noopener noreferrer">Visit Profile</a>
  </div>
</div>

<div id="buttons">
  <button id="dislike-btn">Dislike</button>
  <button id="like-btn" class="like">Like</button>
</div>

<script>
  const profiles = [
    {
      name: "Alice, 24",
      image: "https://randomuser.me/api/portraits/women/44.jpg",
      link: "https://yourpersonalwebsite.com/alice"
    },
    {
      name: "Bob, 27",
      image: "https://randomuser.me/api/portraits/men/34.jpg",
      link: "https://yourpersonalwebsite.com/bob"
    },
    {
      name: "Clara, 22",
      image: "https://randomuser.me/api/portraits/women/65.jpg",
      link: "https://yourpersonalwebsite.com/clara"
    }
  ];

  let currentIndex = 0;
  const likedProfiles = [];

  const profileImg = document.getElementById('profile-img');
  const profileName = document.getElementById('profile-name');
  const profileLink = document.getElementById('link');
  const likeBtn = document.getElementById('like-btn');
  const dislikeBtn = document.getElementById('dislike-btn');
  const card = document.getElementById('card');

  function showProfile(index) {
    if (index >= profiles.length) {
      card.innerHTML = `<h2 style="padding: 50px;">No more profiles<br>You liked ${likedProfiles.length} profile${likedProfiles.length !== 1 ? 's' : ''}.</h2>`;
      document.getElementById('buttons').style.display = 'none';
      return;
    }
    const profile = profiles[index];
    profileImg.src = profile.image;
    profileImg.alt = profile.name;
    profileName.textContent = profile.name;
    profileLink.href = profile.link;
    profileLink.textContent = "Visit Profile";
  }

  likeBtn.onclick = () => {
    likedProfiles.push(profiles[currentIndex]);
    currentIndex++;
    showProfile(currentIndex);
  };

  dislikeBtn.onclick = () => {
    currentIndex++;
    showProfile(currentIndex);
  };

  showProfile(currentIndex);
</script>

</body>
</html>
